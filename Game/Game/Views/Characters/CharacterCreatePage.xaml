<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.Characters.CharacterCreatePage"
             Title="Create">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="CancelCharacter_Clicked" IconImageSource="icon_cancel.png"/>
    </ContentPage.ToolbarItems>
    
 <ContentPage.Content>
    <ScrollView>
        <StackLayout Style="{StaticResource OuterBoxStack}" Spacing="10">

            <Label Text="Create Character Page" Style="{StaticResource HeaderStyle}"/>

            <Label Text="Enter character name:" FontSize="Small" TextColor="Black"/>
            <Entry Placeholder="Character name" FontSize="Small"/>

            <Label Text="Character description:" FontSize="Small" TextColor="Black"/>
            <Entry Placeholder="Description of character" FontSize="Small"/>

           <Picker Title="Select a character type">
              <Picker.Items>
                <x:String>Student</x:String>
                <x:String>Parent</x:String>
              </Picker.Items>
            </Picker>
            
            

        </StackLayout>
    </ScrollView>
 </ContentPage.Content>
</ContentPage>



