<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattlePageOne">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Exit" Clicked="ExitButton_Clicked" IconImageSource="icon_cancel.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand">

            <StackLayout
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <StackLayout>
                    <Button Text="Round Over (temp)!" Clicked="RoundOverButton_Clicked"/>
                </StackLayout>

                <Frame BackgroundColor="{StaticResource New_PageBackgroundColor}" CornerRadius="15" BorderColor="{StaticResource New_ButtonColor}" >
                    <StackLayout Style="{StaticResource VerticalCenterStack}" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="220" WidthRequest="250">
                        <Label Text="Professor Frank gives Ray an exam." HorizontalOptions="Center" Padding="15"/>

                        <StackLayout Orientation="Horizontal">
                            <Image Source="assistant_professor_monster.png"/>
                            <Image Source="helicopter_parent.png"/>

                        </StackLayout>

                        <Button Text="Attack back!" Clicked="AttackBackButton_Clicked" CornerRadius="15" FontAttributes="Bold"  
                                TextColor="{StaticResource New_ButtonTextColor}"
                                Margin="10"
                                HorizontalOptions="Center"
                                BackgroundColor="{StaticResource New_SecondaryBackgroundColor}"/>

                    </StackLayout>

                </Frame>

                <Frame BackgroundColor="{StaticResource New_PageBackgroundColor}" CornerRadius="15" BorderColor="{StaticResource New_ButtonColor}">
                    
                    <StackLayout Style="{StaticResource HorizontalCenterStack}" HeightRequest="75" WidthRequest="250">

                        <Label Text="Health:" FontAttributes="Bold" FontSize="Micro" Padding="5" HorizontalOptions="Center" Style="{StaticResource LabelStyle}"/>
                        <Label Text="GPA:"  FontAttributes="Bold" FontSize="Micro" Padding="5" HorizontalOptions="Center"  Style="{StaticResource LabelStyle}"/>
                        
                    </StackLayout>

                </Frame>

                <Frame BackgroundColor="{StaticResource New_PageBackgroundColor}" CornerRadius="15" BorderColor="{StaticResource New_ButtonColor}">
                    
                    <StackLayout  Style="{StaticResource VerticalCenterStack}" VerticalOptions="Center" 
                                  HorizontalOptions="Center" HeightRequest="75" WidthRequest="250">

                        <Label 
                            Text="Battle Messages"
                            Style="{StaticResource CenterMessageStyle}"
                            FontSize="Micro"
                            FontAttributes="Bold"
                            LineBreakMode="WordWrap"
                            MaxLines="5"
                        />
                    </StackLayout>
                </Frame>
          
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>